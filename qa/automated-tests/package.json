{
  "name": "our-little-corner-tests",
  "version": "1.0.0",
  "description": "Automated tests for Our Little Corner application",
  "scripts": {
    "test": "jest",
    "test:unit": "jest unit/",
    "test:integration": "jest integration/",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "playwright": "^1.40.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../../../app/**/*.{js,ts,tsx}",
      "!../../../app/**/*.d.ts",
      "!../../../app/**/node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/setup/jest.setup.js"]
  },
  "playwright": {
    "testDir": "./e2e",
    "timeout": 30000,
    "use": {
      "baseURL": "http://localhost:3000"
    },
    "projects": [
      {
        "name": "chromium",
        "use": {
          "...devices": "Desktop Chrome"
        }
      }
    ]
  }
}